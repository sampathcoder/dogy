#include<stdio.h>
#include<string.h>
int main()
{
    int d,k=0,i,c,m,f=0;
    char a[100],r;
    gets(a);
    c=strlen(a);
    for(i=0;i<c;i++)
    {
        r=a[i];
        switch(r)
        {
            case 'i':
                    d=1;
                    break;
            case 'v':
                    d=5;
                    break;
            case 'x':
                    d=10;
                    break;
            case 'l':
                    d=50;
                    break;
            case 'c':
                    d=100;
                    break;
            case 'd':
                    d=500;
                    break;
            case 'm':
                    d=100;
                    break;
        }
        if(i==0)
        {
            k=d;
             f=f+k;
        }
        if((i!=0)&&(m<d))
        {
               k=d-m;
             
        }
        else if(i!=0)
        {
           k=m+d; 
        }
        m=d;
        
    }
    printf("%d",f);
}
